#!/usr/bin/perl
use warnings;

#Definindo uma variavel com o valor do salario do funcionrio
$salary = 1220;

#Imprimindo o salario atual na tela do usuario
print("Salario atual: " .$salary. "\n" );

#Aumenta 10% o salario atual
$salary = $salary * 1.10;

#Imprime o salario com o aumento de 10%
print("Salario atual com aumento: " .$salary. "\n");





